
@{
    ViewBag.Title = "ĐỔI MẬT KHẨU";
    Layout = "~/Areas/AdminCP/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading"><i class="fa fa-pencil"></i> @ViewBag.Title</div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <p class="text-danger">@Html.ValidationSummary()</p>
            <div class="form-group">
                <label class="control-label">Mật khẩu hiện tại</label>
                <input type="password" name="oldpass" class="form-control">
            </div>
            <div class="form-group">
                <label class="control-label">Mật khẩu mới</label>
                <input type="password" name="newpass" class="form-control">
            </div>
            <div class="form-group">
                <label class="control-label">Xác nhận lại mật khẩu mới</label>
                <input type="password" name="repass" class="form-control">
            </div>
            <div class="margin-top-10">
                <input type="submit" name="name" class="btn green" value=" Thay đổi" />
                <a href="/" class="btn btn-primary">
                    Trang chủ
                </a>
            </div>
        }
    </div>
</div>

