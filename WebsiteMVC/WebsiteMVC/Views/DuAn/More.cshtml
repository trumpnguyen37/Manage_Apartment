@model IEnumerable<WebsiteMVC.Models.DuAn>

@if (Model.Count() > 0)
{
    <section id="du-an-tuong-tu" class="bg-white" style="margin-bottom: 50px">
        <div class="width1140 padding-0-15">
            <div class="heading-02 ">
                Dự án lân cận
            </div>
            <div id="slider-project" class="flexslider">
                @*<div class="slider-buttons">
                        <a href="#"><span class="but-nextdetail-news flex-next"></span> </a>
                        <a href="#"><span class="but-predetail-news flex-prev"></span> </a>
                    </div>*@
                <div class="flex-viewport">
                    <ul class="exclusive slides">
                        @foreach (var item in Model)
                        {
                            <li class="featured">
                                <a href="@Url.Action("Detail","DuAn",new { IDDuAn = item.IDDuAn })" title="@item.Name">
                                    <div class="cover">
                                        <img src="@item.xImage.Link" alt="Sunwah Pearl" title="@item.Name" draggable="false">
                                    </div>
                                    <header>
                                        <h3 class="heading">@item.Name</h3>
                                        <h4>@item.xAddress2.Name , @item.xAddress1.Name<br>Khởi công: @(item.Start?.ToString("dd/MM/yyyy"))</h4>
                                    </header>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </section>
}
